<Page
    x:Class="metroapp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:metroapp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="156*"/>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="216*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="R6" HorizontalAlignment="Left" Height="768" StrokeThickness="0" VerticalAlignment="Top" Width="1366" Grid.ColumnSpan="5" Grid.RowSpan="4" Opacity="0.7">
            <Rectangle.Stroke>
                <ImageBrush ImageSource="Assets/fruits.jpg"/>
            </Rectangle.Stroke>
            <Rectangle.Fill>
                <ImageBrush ImageSource="Assets/fruits.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="R1" HorizontalAlignment="Left" Height="651" VerticalAlignment="Top" Width="430" Margin="10,10,0,0" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" StrokeThickness="0" Stroke="{StaticResource ButtonBackgroundThemeBrush}" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <ImageBrush Stretch="None"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="589" Margin="0,25,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="432" Opacity="0.3" Grid.RowSpan="2" StrokeThickness="0"/>
        <TextBlock x:Name="Tb1" HorizontalAlignment="Left" Margin="35,25,0,0" TextWrapping="Wrap" Text="Health Guide" VerticalAlignment="Top" Height="47" Width="277" FontSize="48" Grid.Row="1" Grid.Column="1" Style="{StaticResource HeaderTextStyle}"/>
        <Rectangle x:Name="R3" Grid.Column="3" Fill="DeepPink" HorizontalAlignment="Left" Height="278" Margin="10,25,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="402" StrokeThickness="0"/>
        <Rectangle x:Name="R4" Grid.Column="2" Fill="#FF6BEC11" HorizontalAlignment="Left" Height="277" Margin="24,25,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="375" StrokeThickness="0"/>
        <Rectangle x:Name="R5" Grid.Column="3" Fill="CornflowerBlue" HorizontalAlignment="Left" Height="277" Margin="10,25,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="402" StrokeThickness="0"/>
        <TextBlock x:Name="Tb2" Grid.Column="1" HorizontalAlignment="Left" Margin="35,87,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Now-a-days everyone is conscious about their health. Instead of investing money on medicines and other costly treatments people want to opt a better choice through which the prevention of those diseases can be done before they occur. Through this app we can provide a feature which facilitates the user by giving some guidance regarding the diet to be taken by that user.This app also has a feature of providing guidance on first aid tips and some of the Home made remedies which would help the user to large extent. The main functionality of this app would be to provide a better estimation of a person's diet when a person is affected by a disease." VerticalAlignment="Top" Height="238" Width="381" FontSize="14" Style="{StaticResource BodyTextStyle}" Foreground="#FFF9F4F2" TextAlignment="Justify" Grid.RowSpan="2"/>
        <Button x:ConnectionId='1' x:Name="b2" Content="" Grid.Column="3" HorizontalAlignment="Left" Margin="10,77,0,0" Grid.Row="1" VerticalAlignment="Top" Width="402" Height="226" BorderThickness="0"                  ClickMode="Press">
            <Button.Foreground>
                <ImageBrush ImageSource="Assets/dite chat.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="Assets/dite chat.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' x:Name="b3" Content="" Grid.Column="2" HorizontalAlignment="Left" Margin="24,82,0,0" Grid.Row="2" VerticalAlignment="Top" Width="375" Height="220" BorderThickness="0"                  ClickMode="Press">
            <Button.Foreground>
                <ImageBrush ImageSource="Assets/first-aid-kit-icon.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="Assets/first-aid-kit-icon.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='3' x:Name="b4" Content="" Grid.Column="3" HorizontalAlignment="Left" Margin="10,82,0,0" Grid.Row="2" VerticalAlignment="Top" Width="402" Height="220" BorderThickness="0"                  ClickMode="Press">
            <Button.Foreground>
                <ImageBrush ImageSource="Assets/mineral-rich-food.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="Assets/mineral-rich-food.png"/>
            </Button.Background>
        </Button>
        <Rectangle x:Name="R2" Grid.Column="2" Fill="Yellow" HorizontalAlignment="Left" Height="278" Margin="24,25,0,0" Grid.Row="1" StrokeThickness="0" VerticalAlignment="Top" Width="375">

            <Rectangle.Stroke>
                <ImageBrush ImageSource="Assets/fruits.jpg"/>
            </Rectangle.Stroke>
        </Rectangle>
        <Button x:ConnectionId='4' x:Name="b1" Grid.Column="2" HorizontalAlignment="Left" Margin="24,77,0,0" Grid.Row="1" VerticalAlignment="Top" Height="226" Width="375"                    BorderThickness="0" ClickMode="Press">
            <Button.Foreground>
                <ImageBrush ImageSource="Assets/meditation.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="Assets/meditation.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='5' x:Name="b9" Content="Health Tips" Grid.Column="2" HorizontalAlignment="Left" Margin="24,25,0,0" Grid.Row="1" VerticalAlignment="Top" Width="375" Height="57" FontSize="36" FontWeight="Bold" BorderThickness="0"                  ClickMode="Press"/>
        <Button x:ConnectionId='6' x:Name="b10" Content="Diet Chart" Grid.Column="3" HorizontalAlignment="Left" Margin="10,25,0,0" Grid.Row="1" VerticalAlignment="Top" Width="402" Height="57" FontSize="36" BorderThickness="0"                   ClickMode="Press"/>
        <Button x:ConnectionId='7' x:Name="b11" Content="First Aid Tips" Grid.Column="2" HorizontalAlignment="Left" Margin="24,25,0,0" Grid.Row="2" VerticalAlignment="Top" Width="375" FontSize="36" BorderThickness="0" Height="57"                   ClickMode="Press"/>
        <Button x:ConnectionId='8' x:Name="b12" Content="Calorie Calculator" Grid.Column="3" HorizontalAlignment="Left" Margin="10,25,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="36" Height="75" Width="402" BorderThickness="0"                   ClickMode="Press"/>





    </Grid>
</Page>

