<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="metroapp.firstaidtipsP"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:metroapp"
    xmlns:common="using:metroapp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/image2.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="651*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="First Aid Tips" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" Grid.Row="1" Stroke="Black" Opacity="0.3"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Height="4091" Width="1232" FontFamily="Segoe UI Light" FontSize="24">
        		<Run Text="Panic Attacks Treatment"/>
        		<LineBreak/>
        		<Run Text="1. Calm the Person"/>
        		<LineBreak/>
        		<Run Text="Ask the person what you can do to help."/>
        		<LineBreak/>
        		<Run Text="Reassure the person that the attack will probably pass in a few minutes."/>
        		<LineBreak/>
        		<Run Text="Encourage the person to take slow, even breaths."/>
        		<LineBreak/>
        		<Run Text="Do not minimize the person's symptoms."/>
        		<LineBreak/>
        		<Run Text="If unable to calm the person, take him or her to see a health care provider right away."/>
        		<LineBreak/>
        		<Run Text="2. Follow Up"/>
        		<LineBreak/>
        		<Run Text="See a health care provider if the person has had more than one panic attack. This can lead to problems such as depression, agoraphobia (fear of open or public spaces), or substance abuse."/>
        		<LineBreak/>
        		<Run Text="The health care provider may refer the person to a mental health professional for therapy and medication."/>
        		<LineBreak/>
        		<Run/>
        		<LineBreak/>
        		<Run Text="Paronychia Treatment"/>
        		<LineBreak/>
        		<Run Text="1. Protect Nail"/>
        		<LineBreak/>
        		<Run Text="Do not remove any part of the nail."/>
        		<LineBreak/>
        		<Run Text="If an artificial nail is on an infected finger, remove it."/>
        		<LineBreak/>
        		<Run Text="2. Reduce Pain and Swelling"/>
        		<LineBreak/>
        		<Run Text="For mild nail infection or while waiting to see a doctor:"/>
        		<LineBreak/>
        		<Run Text="Soak the affected foot or hand 2 to 3 times daily in warm water."/>
        		<LineBreak/>
        		<Run Text="Apply an over-the-counter antibiotic ointment and bandage."/>
        		<LineBreak/>
        		<Run Text="3. When to See a Doctor"/>
        		<LineBreak/>
        		<Run Text="Seek medical help as soon as possible if:"/>
        		<LineBreak/>
        		<Run Text="Symptoms don't improve after 2 to 3 days."/>
        		<LineBreak/>
        		<Run Text="A pus-filled abscess pocket forms on the side or base of the nail."/>
        		<LineBreak/>
        		<Run Text="The person has a fever and red streaks around the nail, nail discoloration, or joint or muscle pain."/>
        		<LineBreak/>
        		<Run Text="The person has diabetes."/>
        		<LineBreak/>
        		<Run Text="4. Follow Up"/>
        		<LineBreak/>
        		<Run Text="If you seek medical help:"/>
        		<LineBreak/>
        		<Run Text="The doctor may sample pus or fluid and prescribe an antibiotic or anti-fungal medication."/>
        		<LineBreak/>
        		<Run Text="If a pus-filled abscess pocket develops, a doctor may need to drain it."/>
        		<LineBreak/>
        		<Run/>
        		<LineBreak/>
        		<Run Text="Poison Ivy, Oak, or Sumac Treatment"/>
        		<LineBreak/>
        		<Run Text="Call ambulance if the person has:"/>
        		<LineBreak/>
        		<Run Text="Trouble swallowing or breathing"/>
        		<LineBreak/>
        		<Run Text="Swelling, especially near the eyes or on the face"/>
        		<LineBreak/>
        		<Run Text="1. Wash Exposed Area"/>
        		<LineBreak/>
        		<Run Text="Wash with warm soap and water."/>
        		<LineBreak/>
        		<Run Text="Washing within 10 minutes can significantly reduce the chance of an allergic reaction."/>
        		<LineBreak/>
        		<Run Text="2. Remove Contaminated Clothing"/>
        		<LineBreak/>
        		<Run Text="Plant oil can continue to spread from clothing and shoes."/>
        		<LineBreak/>
        		<Run Text="3. Ease Itching and Discomfort"/>
        		<LineBreak/>
        		<Run Text="Apply cool compresses for 15 to 30 minutes at a time."/>
        		<LineBreak/>
        		<Run Text="Avoid topical antihistamines, anesthetics like benzocaine, and antibiotic ointments, all of which may make skin more sensitive."/>
        		<LineBreak/>
        		<Run Text="Have the person take oatmeal baths."/>
        		<LineBreak/>
        		<Run Text="Apply calamine lotion."/>
        		<LineBreak/>
        		<Run Text="If itchiness makes sleep difficult, give an oral antihistamine."/>
        		<LineBreak/>
        		<Run Text="4. When to See a Doctor"/>
        		<LineBreak/>
        		<Run Text="Get medical help if rash covers a large part of the person's body, or if the person has blisters or can't sleep."/>
        		<LineBreak/>
        		<Run Text="5. Follow Up"/>
        		<LineBreak/>
        		<Run Text="Symptoms usually go away within a week or two."/>
        		<LineBreak/>
        		<Run Text="Wash contaminated clothing to avoid exposure to oil."/>
        		<LineBreak/>
        		<Run Text="If serious rash persists, call a doctor."/>
        		<LineBreak/>
        		<Run/>
        		<LineBreak/>
        		<Run Text="Poisoning Treatment"/>
        		<LineBreak/>
        		<Run Text="Call ambulance if the person:"/>
        		<LineBreak/>
        		<Run Text="Has collapsed"/>
        		<LineBreak/>
        		<Run Text="Has stopped breathing or is having trouble breathing"/>
        		<LineBreak/>
        		<Run Text="Is having seizures or convulsions"/>
        		<LineBreak/>
        		<Run Text="Is unconscious or not alert"/>
        		<LineBreak/>
        		<Run Text="Call Poison Control if:"/>
        		<LineBreak/>
        		<Run Text="Call the poison control center if the person has done any of these things and is alert:"/>
        		<LineBreak/>
        		<Run Text="Swallowed too much medicine or the wrong kind"/>
        		<LineBreak/>
        		<Run Text="Inhaled poison"/>
        		<LineBreak/>
        		<Run Text="Gotten poison on the skin or in the eye"/>
        		<LineBreak/>
        		<Run Text="Swallowed a household product or other chemical"/>
        		<LineBreak/>
        		<Run Text="1. Treat Symptoms as Directed"/>
        		<LineBreak/>
        		<Run Text="Follow the instructions of emergency personnel or poison control."/>
        		<LineBreak/>
        		<Run/>
        		<LineBreak/>
        		<Run Text="Poisoning (Children)"/>
        		<LineBreak/>
        		<Run Text="Call ambulance if the child has taken poison and:"/>
        		<LineBreak/>
        		<Run Text="Is not breathing properly or having trouble breathing"/>
        		<LineBreak/>
        		<Run Text="Is unconscious or not alert"/>
        		<LineBreak/>
        		<Run Text="Has collapsed"/>
        		<LineBreak/>
        		<Run Text="Is having seizures"/>
        		<LineBreak/>
        		<Run Text="Poison has splashed on his face or eyes"/>
        		<LineBreak/>
        		<Run Text="Is acting differently"/>
        		<LineBreak/>
        		<Run Text="You have any concerns"/>
        		<LineBreak/>
        		<Run Text="Poisoning in children is serious, and you need to get emergency help immediately."/>
        		<LineBreak/>
        		<Run Text="When to Call Poison Control"/>
        		<LineBreak/>
        		<Run Text="Call the poison control center if you think your child has taken poison and he is alert or if your child has done any of these things and is alert:"/>
        		<LineBreak/>
        		<Run Text="Swallowed too much medicine or the wrong kind"/>
        		<LineBreak/>
        		<Run Text="Has pieces of pills on clothes or lips"/>
        		<LineBreak/>
        		<Run Text="Has a strange smell"/>
        		<LineBreak/>
        		<Run Text="Is vomiting"/>
        		<LineBreak/>
        		<Run Text="Is drooling a lot"/>
        		<LineBreak/>
        		<Run Text="Is alert but acting differently"/>
        		<LineBreak/>
        		<Run Text="Is confused"/>
        		<LineBreak/>
        		<Run Text="Has no energy"/>
        		<LineBreak/>
        		<Run Text="Treat Symptoms as Directed"/>
        		<LineBreak/>
        		<Run Text="Follow the instructions of emergency personnel or poison control."/>
        		<LineBreak/>
        		<Run/>
        		<LineBreak/>
        		<Run Text="Puncture Wound Treatment"/>
        		<LineBreak/>
        		<Run Text="Call ambulance if the person is seriously injured or a puncture wound:"/>
        		<LineBreak/>
        		<Run Text="Bleeds excessively"/>
        		<LineBreak/>
        		<Run Text="Spurts blood"/>
        		<LineBreak/>
        		<Run Text="Does not stop bleeding after 10 minutes of firm pressure"/>
        		<LineBreak/>
        		<Run Text="Is to the chest, abdomen, or neck "/>
        		<LineBreak/>
        		<Run Text="Is accompanied by any emergency symptoms: severe pain, fast breathing or trouble breathing, vomiting, dizziness, unconsciousness"/>
        		<LineBreak/>
        		<Run Text="Is to the eye or in the throat. Leave the object in place. Keep the person calm."/>
        		<LineBreak/>
        		<Run Text="Call or see a health care provider immediately if:"/>
        		<LineBreak/>
        		<Run Text="The object that caused the puncture wound cannot be easily removed"/>
        		<LineBreak/>
        		<Run Text="The puncture wound is deep, on the face, or touching bone"/>
        		<LineBreak/>
        		<Run Text="The wound is visibly dirty"/>
        		<LineBreak/>
        		<Run Text="The wound is an animal or human bite"/>
        		<LineBreak/>
        		<Run Text="The wound occurred through the bottom of a shoe -- stepping on a nail, for example"/>
        		<LineBreak/>
        		<Run Text="1. Remove the Object if You Can"/>
        		<LineBreak/>
        		<Run Text="If the object that caused the puncture is small and you can easily remove it, do so."/>
        		<LineBreak/>
        		<Run Text="2. Stop the Bleeding"/>
        		<LineBreak/>
        		<Run Text="Apply firm, direct pressure with sterile gauze or clean cloth until bleeding stops."/>
        		<LineBreak/>
        		<Run Text="3. Clean and Protect the Wound"/>
        		<LineBreak/>
        		<Run Text="Rinse the wound under clean water for several minutes. Then wash the area with mild soap and water and rinse again."/>
        		<LineBreak/>
        		<Run Text="Apply an antibiotic cream."/>
        		<LineBreak/>
        		<Run Text="Use a sterile bandage to protect the puncture wound from dirt or further injury."/>
        		<LineBreak/>
        		<Run Text="4. Treat Pain"/>
        		<LineBreak/>
        		<Run Text="For pain, give ibuprofen (Advil, Motrin) or acetaminophen (Tylenol). Check with the doctor first, though, if you have any medical conditions or take any other medicines."/>
        		<LineBreak/>
        		<Run Text=" 5. Follow-up"/>
        		<LineBreak/>
        		<Run Text="See a healthcare provider for any signs of infection: redness, increasing pain, swelling, or pus at the site."/>
        		<LineBreak/>
        		<Run Text="Ask the health care provider if a tetanus shot is needed."/>
        		<LineBreak/>
        		<Run Text="Some wounds may need antibiotics. Ask the health care provider."/>
        		<LineBreak/>
        		<Run/>
            </TextBlock>
        </ScrollViewer>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

