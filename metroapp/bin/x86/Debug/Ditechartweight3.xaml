        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="46" Grid.RowSpan="3" Style="{StaticResource BackButtonStyle}"                     />
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="616" Margin="10,34,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="422" Opacity="0.3" Grid.Column="1"/>
