<Page
    x:Class="metroapp.Health_Tips3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:metroapp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="311*"/>
            <ColumnDefinition Width="311*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/images.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="348*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' Content="Button" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Row="1" Style="{StaticResource BackButtonStyle}"                      Grid.Column="1" Height="54" Grid.RowSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="528,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="HealthTips" VerticalAlignment="Top" Height="54" Width="257" FontSize="48" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="138" Margin="0,45,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="640" Grid.Column="1" Opacity="0.3" StrokeThickness="0"/>
        <Image HorizontalAlignment="Left" Height="138" Margin="0,45,0,0" Grid.Row="2" VerticalAlignment="Top" Width="126" Grid.Column="1" Source="Assets/herbs.png" Stretch="Fill"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="127,47,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="133" Width="487" FontSize="22" Foreground="#FFF3EFEF" TextAlignment="Justify" Style="{StaticResource BodyTextStyle}">
        	<Run Foreground="#FF0C0000" Text="Go Herbal"/>
        	<LineBreak/>
        	<Run Foreground="#FFF7F3F3" FontSize="20" Text="For varicose veins, try horse chestnut, an herbal extract that's been shown in studies to strengthen veins and reduce swelling. The herb is also available in topical creams, though there's not as much evidence for these."/>
        </TextBlock>
        <Rectangle Grid.Column="2" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="138" Margin="10,45,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="624" Opacity="0.3" StrokeThickness="0"/>
        <Rectangle Grid.Column="2" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="111" Margin="10,208,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="624" Opacity="0.3" StrokeThickness="0"/>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="111" Margin="0,208,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="640" Opacity="0.3" StrokeThickness="0"/>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="157" Margin="0,503,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="640" Opacity="0.3" StrokeThickness="0"/>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="111" Margin="0,208,0,0" Grid.Row="2" VerticalAlignment="Top" Width="126" Source="Assets/Banana.png" Stretch="Fill"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="131,208,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="111" Width="491" FontSize="22"/>
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="138" Margin="10,45,0,0" Grid.Row="2" VerticalAlignment="Top" Width="125" Source="Assets/peppermintoil.png" Stretch="Fill"/>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="157" Margin="0,503,0,0" Grid.Row="2" VerticalAlignment="Top" Width="135" Source="Assets/ginger.png" Stretch="Fill"/>
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="111" Margin="10,208,0,0" Grid.Row="2" VerticalAlignment="Top" Width="125" Source="Assets/soap.png" Stretch="Fill"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="140,47,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="134" Width="479" Foreground="Black" FontSize="20" Style="{StaticResource BodyTextStyle}" TextAlignment="Justify">
        	<Run FontSize="22" Text="Rub Your Temples"/>
        	<LineBreak/>
        	<Run Foreground="#FFFBF6F6" Text="Tame tension headaches by rubbing peppermint oil, Tiger Balm, or white flower oil into your temples. All three remedies contain menthol, which has analgesic properties."/>
        </TextBlock>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="142,503,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="155" Width="475" FontSize="22" Foreground="Black" Style="{StaticResource BodyTextStyle}" TextAlignment="Justify">
        	<Run Text="Enjoy Ginger"/>
        	<LineBreak/>
        	<Run Foreground="#FFFDF8F8" FontSize="20" Text="The volatile oils in ginger have long made it a useful herbal remedy for nasal and chest congestion. Pour 2 cups of boiling water over a 1-inch piece of peeled, grated ginger; steep for 10 minutes; and strain. Add a pinch or two "/>
        	<Run Foreground="#FFFBECEC" FontSize="20" Text="of "/>
        	<Run Foreground="#FFFBECEC" Text="cayenne pepper to the water and drink as needed."/>
        </TextBlock>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="129,206,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="109" Width="484" FontSize="22" Foreground="Black" TextAlignment="Justify" Style="{StaticResource BodyTextStyle}">
        	<Run Text="Eat Bananas"/>
        	<LineBreak/>
        	<Run Foreground="#FFF7F6F6" FontSize="20" Text="People whose diets are rich in potassium may be less prone to high blood pressure. Besides reducing sodium and taking other heart-healthy steps, eat potassium-packed picks such as bananas,cantaloupe, and oranges."/>
        </TextBlock>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="144,214,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="101" Width="478" FontSize="22" Foreground="#FF080000" Style="{StaticResource BodyTextStyle}" TextAlignment="Justify">
        	<Run Text="Use Calendula Products"/>
        	<LineBreak/>
        	<Run Foreground="#FFFBF6F6" FontSize="20" Text="To ease acne, forgo benzoyl peroxide for lotion or soap made from calendula flowers, which may have antiseptic effects."/>
        </TextBlock>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="122" Margin="0,356,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="640" Opacity="0.3" StrokeThickness="0"/>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="122" Margin="0,356,0,0" Grid.Row="2" VerticalAlignment="Top" Width="126" Source="Assets/shoes.png" Stretch="Fill"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="116" Grid.Column="1" Margin="125,356,0,0" Grid.Row="2" Width="492" FontSize="22" Foreground="Black" TextAlignment="Justify" Style="{StaticResource BodyTextStyle}">
        	<Run Text="Get a Good Pair of Sneakers"/>
        	<LineBreak/>
        	<Run Foreground="#FFF7F1F1" FontSize="20" Text="Is your energy lagging? Though it may be the last thing you feel like doing when you're tired, exercise -- even a brisk walk -- can be more effective than a nap or cup of coffee at fighting fatigue."/>
        </TextBlock>
        <Rectangle Grid.Column="2" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="122" Margin="10,356,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="624" Opacity="0.3" StrokeThickness="0"/>
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="122" Margin="10,356,0,0" Grid.Row="2" VerticalAlignment="Top" Width="125" Source="Assets/carb.png" Stretch="Fill"/>
        <TextBlock Grid.Column="2" Margin="142,352,22,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="122" FontSize="22" Foreground="Black" TextAlignment="Justify" Style="{StaticResource BodyTextStyle}">
        	<Run Text="Embrace Bitters"/>
        	<LineBreak/>
        	<Run Foreground="#FFF7F4F4" FontSize="20" Text="Combat a yen for sugar by following a Chinese medicine approach: Eat foods such as endive, radicchio, cooked greens, and olives."/>
        </TextBlock>
        <Rectangle Grid.Column="2" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="157" Margin="10,503,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="624" Opacity="0.3" StrokeThickness="0"/>
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="157" Margin="10,503,0,0" Grid.Row="2" VerticalAlignment="Top" Width="125" Source="Assets/broccoli.png"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="140,503,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="157" Width="472" Foreground="Black" FontSize="22" TextAlignment="Justify">
        	<Run Text="Eat Broccoli"/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F5F5" Text="For healthy gums, put this green vegetable on your grocery list. It's an excellent source of vitamin C and provides calcium as well, both of which have been linked to lower rates of periodontal disease."/>
        </TextBlock>
        <Button x:ConnectionId='2' Content="" Grid.Column="2" HorizontalAlignment="Left" Margin="558,0,0,677" Grid.Row="1" VerticalAlignment="Stretch" Grid.RowSpan="2" BorderThickness="0"                        Width="86">
            <Button.Foreground>
                <ImageBrush ImageSource="Assets/home.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="Assets/home.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>

