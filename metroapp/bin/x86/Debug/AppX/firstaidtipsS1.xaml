<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="metroapp.firstaidtipsS1"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:metroapp"
    xmlns:common="using:metroapp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/image2.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="649*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="First Aid Tips" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" Grid.Row="1" Stroke="Black" Opacity="0.3"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Height="9371" Width="1220" FontFamily="Segoe UI Light" FontSize="24">
            	<Run Text="Scratched Eye/Corneal Abrasion Treatment"/>
            	<LineBreak/>
            	<Run Text="Seek emergency care if:"/>
            	<LineBreak/>
            	<Run Text="There is pain, change in vision, or increased sensitivity to light after a scratch or trauma to the eyeball."/>
            	<LineBreak/>
            	<Run Text="There is a foreign object lodged in the eye or eyelid."/>
            	<LineBreak/>
            	<Run Text="There is loss of vision."/>
            	<LineBreak/>
            	<Run Text="Something hit the eye at high speed or with high force."/>
            	<LineBreak/>
            	<Run Text="1. Clean and Protect the Eye"/>
            	<LineBreak/>
            	<Run Text="Inspect the eye for small particles that may be stuck under the eyelid and causing symptoms."/>
            	<LineBreak/>
            	<Run Text="Flush the eye with clean water or saline solution once or twice to remove any particles or to soothe the eye surface. Do not rinse the eye more than a few times. Doing so can make the situation worse."/>
            	<LineBreak/>
            	<Run Text="Avoid rubbing or pressing on the eye."/>
            	<LineBreak/>
            	<Run Text="2. When to See a Health Care Provide"/>
            	<LineBreak/>
            	<Run Text="Get medical help if:"/>
            	<LineBreak/>
            	<Run Text="The person has blurred vision or eye pain, tearing, redness, or irritation even if there does not appear to be something in the eye. There may be a scratch on the surface of the eye called a corneal abrasion."/>
            	<LineBreak/>
            	<Run Text="3. Follow Up"/>
            	<LineBreak/>
            	<Run Text="If you see a health care provider:"/>
            	<LineBreak/>
            	<Run Text="The health care provider will examine the eye for damage, remove any particles, and check the vision."/>
            	<LineBreak/>
            	<Run Text="Antibiotic ointment or pain relievers may be prescribed."/>
            	<LineBreak/>
            	<Run Text="Small, surface corneal abrasions heal in a couple of days. Pain medications such as acetaminophen (Tylenol) or ibuprofen (Advil, Motrin) can be taken for pain. Avoid ibuprofen and other NSAIDs if the person has heart failure or kidney failure."/>
            	<LineBreak/>
            	<Run Text="For larger abrasions, care from an ophthalmologist (eye specialist) may be needed."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Seizures Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance"/>
            	<LineBreak/>
            	<Run Text="Seizures need emergency care unless you know the person has a history of seizures and can be treated for a brief seizure at home."/>
            	<LineBreak/>
            	<Run Text="1. Prevent Choking"/>
            	<LineBreak/>
            	<Run Text="Loosen clothing around the person's neck."/>
            	<LineBreak/>
            	<Run Text="Roll the person on his or her side to keep the airway open."/>
            	<LineBreak/>
            	<Run Text="Don't put anything into the person's mouth."/>
            	<LineBreak/>
            	<Run Text="2. Protect From Injury"/>
            	<LineBreak/>
            	<Run Text="Move sharp objects, such as glassware or furniture, away from the person."/>
            	<LineBreak/>
            	<Run Text="Ask bystanders to give the person room."/>
            	<LineBreak/>
            	<Run Text="Do not restrain or hold down the person."/>
            	<LineBreak/>
            	<Run Text="3. Treatment"/>
            	<LineBreak/>
            	<Run Text="If the person has a history of seizures, he or she may have medications to treat them. Give the medications according to the prescribed directions."/>
            	<LineBreak/>
            	<Run Text="Medications or brain imaging may be needed at the hospital."/>
            	<LineBreak/>
            	<Run Text="4. Follow Up"/>
            	<LineBreak/>
            	<Run Text="Stay with the person until emergency help arrives."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Seizures in Children"/>
            	<LineBreak/>
            	<Run Text="Call ambulance if the child:"/>
            	<LineBreak/>
            	<Run Text="Has a seizure"/>
            	<LineBreak/>
            	<Run Text="Has trouble breathing"/>
            	<LineBreak/>
            	<Run Text="Turns blue"/>
            	<LineBreak/>
            	<Run Text="Hits his head before or during a seizure"/>
            	<LineBreak/>
            	<Run Text="Is unconscious for several minutes"/>
            	<LineBreak/>
            	<Run Text="Might have ingested anything poisonous"/>
            	<LineBreak/>
            	<Run Text="Seeing a child have a seizure is frightening, and you should seek emergency help to be safe. But seizures often don't cause serious health problems. Febrile seizures, which happen during a fever, can be common in toddlers."/>
            	<LineBreak/>
            	<Run Text="Call Doctor If:"/>
            	<LineBreak/>
            	<Run Text="Even if your child has had a seizure before and your pediatrician has told you what to do, you should still call your pediatrician."/>
            	<LineBreak/>
            	<Run Text="If your child is breathing normally, keep your child safe:"/>
            	<LineBreak/>
            	<Run Text="Place your child on the floor on his or her side and clear away objects that are in close proximity."/>
            	<LineBreak/>
            	<Run Text="Loosen tight clothing surrounding the head or neck."/>
            	<LineBreak/>
            	<Run Text="Don't put anything in your child's mouth or try to stop the seizures in any way."/>
            	<LineBreak/>
            	<Run Text="If your child vomits, move him onto his side and clear out his mouth."/>
            	<LineBreak/>
            	<Run Text="Don't try to hold your child down or restrain her movements."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Severe Allergic Reaction Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance"/>
            	<LineBreak/>
            	<Run Text="For a minor allergic reaction, see Allergic Reaction Treatment."/>
            	<LineBreak/>
            	<Run Text="1. Seek emergency care"/>
            	<LineBreak/>
            	<Run Text="Get immediate help if the person has these symptoms or a history of severe allergic reactions (anaphylaxis) even if there are no symptoms:"/>
            	<LineBreak/>
            	<Run Text="Difficulty breathing or wheezing"/>
            	<LineBreak/>
            	<Run Text="Tightness in the throat or a feeling that the airways are closing"/>
            	<LineBreak/>
            	<Run Text="Hoarseness or trouble speaking"/>
            	<LineBreak/>
            	<Run Text="Swollen lips, tongue, or throat"/>
            	<LineBreak/>
            	<Run Text="Nausea, abdominal pain, or vomiting"/>
            	<LineBreak/>
            	<Run Text="Fast heartbeat or pulse"/>
            	<LineBreak/>
            	<Run Text="Skin that itches, tingles, swells, or develops raised red areas (hives)"/>
            	<LineBreak/>
            	<Run Text="Anxiety or dizziness"/>
            	<LineBreak/>
            	<Run Text="Loss of consciousness"/>
            	<LineBreak/>
            	<Run Text="2. Inject Epinephrine Immediately"/>
            	<LineBreak/>
            	<Run Text="If the person has an anaphylaxis action plan from a doctor for injecting epinephrine and other emergency measures, follow it."/>
            	<LineBreak/>
            	<Run Text="Otherwise, if the person carries an epinephrine shot -- it's a good idea to always carry two shots -- or one is available:"/>
            	<LineBreak/>
            	<Run Text="Inject epinephrine if the person is unable to."/>
            	<LineBreak/>
            	<Run Text="If the person has a history of anaphylaxis, don't wait for signs of a severe reaction to inject epinephrine."/>
            	<LineBreak/>
            	<Run Text="Read and follow patient instructions carefully."/>
            	<LineBreak/>
            	<Run Text="Inject epinephrine into outer muscle of the thigh. Avoid injecting into a vein or buttock muscles."/>
            	<LineBreak/>
            	<Run Text="Do not inject medicine into hands or feet, which can cause tissue damage. If this happens, notify the emergency room staff."/>
            	<LineBreak/>
            	<Run Text="The person may need more than one injection if there's no improvement after the first. For an adult, inject again after 5 to 15 minutes. For a child, inject again after 5 to 20 minutes."/>
            	<LineBreak/>
            	<Run Text="3. Do CPR if the Person Stops Breathing"/>
            	<LineBreak/>
            	<Run Text="For a child, start CPR for children."/>
            	<LineBreak/>
            	<Run Text="For an adult, start adult CPR."/>
            	<LineBreak/>
            	<Run Text="4. Follow Up"/>
            	<LineBreak/>
            	<Run Text="Make sure that someone stays with the person for 24 hours after anaphylaxis in case of another attack."/>
            	<LineBreak/>
            	<Run Text="Report the reaction to the person's doctor."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Shark Bite Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance"/>
            	<LineBreak/>
            	<Run Text="1. Get Emergency Help"/>
            	<LineBreak/>
            	<Run Text="For all but minor wounds"/>
            	<LineBreak/>
            	<Run Text="2. Control Bleeding"/>
            	<LineBreak/>
            	<Run Text="Apply direct pressure to the wound."/>
            	<LineBreak/>
            	<Run Text="3. Keep the Person Warm"/>
            	<LineBreak/>
            	<Run Text="4. Treat Shock"/>
            	<LineBreak/>
            	<Run Text="If person has cool and clammy skin, weak and rapid pulse, or nausea or is faint or unconscious, see Shock Treatment."/>
            	<LineBreak/>
            	<Run Text="5. For Minor Injury"/>
            	<LineBreak/>
            	<Run Text="Clean wound with soap and water, and cover."/>
            	<LineBreak/>
            	<Run Text="Take the person to a medical clinic or emergency room for further cleaning."/>
            	<LineBreak/>
            	<Run Text="Even a minor wound must be carefully cleaned to avoid infection."/>
            	<LineBreak/>
            	<Run Text="6. Follow Up"/>
            	<LineBreak/>
            	<Run Text="Medical treatment will depend on the severity of the injury."/>
            	<LineBreak/>
            	<Run Text="For a minor bite, the health care provider will clean the wound and may prescribe an antibiotic."/>
            	<LineBreak/>
            	<Run Text="For a serious injury, health care providers will stabilize the person's airway, breathing, and circulation. Surgery may be necessary."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Shock Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance"/>
            	<LineBreak/>
            	<Run Text="1. Lay the Person Down, if Possible"/>
            	<LineBreak/>
            	<Run Text="Elevate the person's feet about 12 inches unless head, neck, or back is injured or you suspect broken hip or leg bones."/>
            	<LineBreak/>
            	<Run Text="Do not raise the person's head."/>
            	<LineBreak/>
            	<Run Text="Turn the person on side if he or she is vomiting or bleeding from the mouth."/>
            	<LineBreak/>
            	<Run Text="2. Begin CPR, if Necessary"/>
            	<LineBreak/>
            	<Run Text="If the person is not breathing or breathing seems dangerously weak:"/>
            	<LineBreak/>
            	<Run Text="For a child, start CPR for children."/>
            	<LineBreak/>
            	<Run Text="For an adult, start adult CPR."/>
            	<LineBreak/>
            	<Run Text="Check breathing every 5 minutes until help arrives."/>
            	<LineBreak/>
            	<Run Text="4. Treat Obvious Injuries"/>
            	<LineBreak/>
            	<Run Text="5. Keep Person Warm and Comfortable"/>
            	<LineBreak/>
            	<Run Text="Loosen restrictive clothing."/>
            	<LineBreak/>
            	<Run Text="Cover with coat or blanket."/>
            	<LineBreak/>
            	<Run Text="Keep the person still. Do not move the person unless there is danger."/>
            	<LineBreak/>
            	<Run Text="Reassure the person."/>
            	<LineBreak/>
            	<Run Text="Do not give anything to eat or drink."/>
            	<LineBreak/>
            	<Run Text="6. Follow Up"/>
            	<LineBreak/>
            	<Run Text="At the hospital, the person will be given oxygen and intravenous liquids."/>
            	<LineBreak/>
            	<Run Text="Other treatment will depend on the cause of shock."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Electrical Shock"/>
            	<LineBreak/>
            	<Run Text="Call ambulance if the child:"/>
            	<LineBreak/>
            	<Run Text="Has been injured by an electrical shock"/>
            	<LineBreak/>
            	<Run Text="Electrical shocks always need emergency medical attention -- even if your child seems to be fine afterward."/>
            	<LineBreak/>
            	<Run Text="Follow the directions of emergency personnel."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Shoulder and Neck Pain Treatment"/>
            	<LineBreak/>
            	<Run Text="1. When to Seek Immediate Medical Care"/>
            	<LineBreak/>
            	<Run Text="See a doctor or go to a hospital emergency room if:"/>
            	<LineBreak/>
            	<Run Text="Pain is from a severe blow or injury"/>
            	<LineBreak/>
            	<Run Text="Neck pain radiates down the arms and legs"/>
            	<LineBreak/>
            	<Run Text="Headaches, numbness, tingling, or weakness occur with pain"/>
            	<LineBreak/>
            	<Run Text="The person has a stiff neck with fever, vomiting, and sensitivity to light"/>
            	<LineBreak/>
            	<Run Text=" 2. Ease Muscle Spasms"/>
            	<LineBreak/>
            	<Run Text="Apply dry or moist heat."/>
            	<LineBreak/>
            	<Run Text="3. Reduce Swelling"/>
            	<LineBreak/>
            	<Run Text="If the area is inflamed, apply ice for 20 minutes 4 to 8 times a day."/>
            	<LineBreak/>
            	<Run Text="4. Relieve Pain"/>
            	<LineBreak/>
            	<Run Text="Give pain medication such as acetaminophen (Tylenol), ibuprofen (Advil, Motrin), or Naproxen (Aleve, Naprosyn)."/>
            	<LineBreak/>
            	<Run Text=" 5. Rest"/>
            	<LineBreak/>
            	<Run Text="The affected area should not be used for a day or two."/>
            	<LineBreak/>
            	<Run Text="Normal activities should be gradually resumed."/>
            	<LineBreak/>
            	<Run Text="6. Follow Up"/>
            	<LineBreak/>
            	<Run Text="The person should see a doctor if pain doesn't get better or worsens."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Shoulder Dislocation Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance if:"/>
            	<LineBreak/>
            	<Run Text="The injury was caused by a severe blow."/>
            	<LineBreak/>
            	<Run Text="The person's pulse is weak or the arm and hand are numb, cold, pale, or blue."/>
            	<LineBreak/>
            	<Run Text="1. Go to a Hospital Emergency Room"/>
            	<LineBreak/>
            	<Run Text="2. Immobilize Shoulder"/>
            	<LineBreak/>
            	<Run Text="Do not force arm to move."/>
            	<LineBreak/>
            	<Run Text="Place pillow or rolled blanket between upper arm and chest."/>
            	<LineBreak/>
            	<Run Text="Wrap towel around the person's upper body to bind arm to it."/>
            	<LineBreak/>
            	<Run Text="Otherwise, if comfortable to do so, put the affected forearm in a sling with elbow at 90° angle."/>
            	<LineBreak/>
            	<Run Text="3. Control Swelling"/>
            	<LineBreak/>
            	<Run Text="Apply ice pack for 20 minutes 4 to 8 times a day. Do not place ice directly against the skin."/>
            	<LineBreak/>
            	<Run Text="4. Follow Up"/>
            	<LineBreak/>
            	<Run Text="The doctor may manipulate the shoulder to put it back in place."/>
            	<LineBreak/>
            	<Run Text="The doctor may recommend wearing a sling for several weeks."/>
            	<LineBreak/>
            	<Run Text="Give medication such as acetaminophen (Tylenol) or ibuprofen (Advil, Motrin) for pain and swelling.  Avoid ibuprofen and other NSAIDs if the person has heart failure or kidney failure."/>
            	<LineBreak/>
            	<Run Text="If shoulder continues to dislocate, surgery may be required."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Shoulder Separation Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance if:"/>
            	<LineBreak/>
            	<Run Text="The injury was caused by a severe blow."/>
            	<LineBreak/>
            	<Run Text="The person's pulse is weak."/>
            	<LineBreak/>
            	<Run Text="1. Get Medical Help Immediately"/>
            	<LineBreak/>
            	<Run Text="See a doctor or go to a hospital emergency room."/>
            	<LineBreak/>
            	<Run Text="2. Immobilize Shoulder"/>
            	<LineBreak/>
            	<Run Text="Place person's forearm at right angle to chest."/>
            	<LineBreak/>
            	<Run Text="Apply sling and tie it around neck."/>
            	<LineBreak/>
            	<Run Text="To bind arm to body, wrap a towel around chest and arm and tie it under opposite arm."/>
            	<LineBreak/>
            	<Run Text="3. Control Pain and Swelling"/>
            	<LineBreak/>
            	<Run Text="Apply ice for 20 minutes. Remove to rewarm skin and reapply."/>
            	<LineBreak/>
            	<Run Text="Give pain reliever such as acetaminophen (Tylenol) or ibuprofen (Advil, Motrin) to reduce pain and swelling."/>
            	<LineBreak/>
            	<Run Text="4. Follow Up"/>
            	<LineBreak/>
            	<Run Text="See a doctor if joint pain or swelling continues after 2 or 3 days."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Skier's Thumb Treatment"/>
            	<LineBreak/>
            	<Run Text="1. Treat Symptoms"/>
            	<LineBreak/>
            	<Run Text="Apply ice to reduce swelling."/>
            	<LineBreak/>
            	<Run Text="Immobilize the thumb with an elastic bandage or brace."/>
            	<LineBreak/>
            	<Run Text="Give acetaminophen (Tylenol) or ibuprofen (Advil, Motrin) for pain. Do not give aspirin to anyone under age 18."/>
            	<LineBreak/>
            	<Run Text="2. See a Health Care Provider as Soon as Possible"/>
            	<LineBreak/>
            	<Run Text="3. Follow Up"/>
            	<LineBreak/>
            	<Run Text="The health care provider will likely X-ray the person's thumb."/>
            	<LineBreak/>
            	<Run Text="A partially torn ligament will be immobilized with a splint or cast. A fully torn ligament may require surgery."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Slipped Disk Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance if the person has a slipped disk and:"/>
            	<LineBreak/>
            	<Run Text="Loses bladder or bowel control"/>
            	<LineBreak/>
            	<Run Text="Has weakness in the arms or legs"/>
            	<LineBreak/>
            	<Run Text="Has numbness in the inner, upper part of the thighs"/>
            	<LineBreak/>
            	<Run Text="1. Treat Pain"/>
            	<LineBreak/>
            	<Run Text="Changing positions or shifting posture may reduce immediate discomfort. For example, laying on the back, with feet on a chair and knees at a 90-degree angle, can be quite comfortable for back problems."/>
            	<LineBreak/>
            	<Run Text="Apply a cold compress several times a day for no more than 20 minutes at a time."/>
            	<LineBreak/>
            	<Run Text="Give nonsteroidal anti-inflammatory medication (such as Motrin, Aleve, Advil or Naprosyn)."/>
            	<LineBreak/>
            	<Run Text="2. Have the Person Rest"/>
            	<LineBreak/>
            	<Run Text="Lying flat for a day or two may help, but no longer than that; it is important to become active again sooner than later."/>
            	<LineBreak/>
            	<Run Text="The person should avoid activities such as lifting or pushing."/>
            	<LineBreak/>
            	<Run Text="3. See a Health Care Provider"/>
            	<LineBreak/>
            	<Run Text="All slipped disks should be evaluated."/>
            	<LineBreak/>
            	<Run Text="4. Follow-Up"/>
            	<LineBreak/>
            	<Run Text="The health care provider may recommend muscle relaxants, anti-inflammatory medications, injections of pain reliever, acupuncture, or physical therapy."/>
            	<LineBreak/>
            	<Run Text="Most people feel better within six weeks."/>
            	<LineBreak/>
            	<Run Text="In some cases, back surgery is necessary."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Smoke Inhalation Treatment"/>
            	<LineBreak/>
            	<Run Text="Call ambulance"/>
            	<LineBreak/>
            	<Run Text="1. Get Emergency Help If the Person:"/>
            	<LineBreak/>
            	<Run Text="Is unconscious"/>
            	<LineBreak/>
            	<Run Text="Is dizzy or confused"/>
            	<LineBreak/>
            	<Run Text="Has chest pain or tightness"/>
            	<LineBreak/>
            	<Run Text="Is coughing or choking violently"/>
            	<LineBreak/>
            	<Run Text="Has wheezing, shortness of breath, or irregular breathing"/>
            	<LineBreak/>
            	<Run Text="Has ash or smoke around mouth and nose"/>
            	<LineBreak/>
            	<Run Text="Has burns inside mouth, throat, and nose"/>
            	<LineBreak/>
            	<Run Text="Has swollen airways"/>
            	<LineBreak/>
            	<Run Text="Has black or gray saliva"/>
            	<LineBreak/>
            	<Run Text="Is nauseated or vomiting"/>
            	<LineBreak/>
            	<Run Text="Is hoarse"/>
            	<LineBreak/>
            	<Run Text="Has double or blurry vision"/>
            	<LineBreak/>
            	<Run Text="Has numbness or tingling in his or her extremities"/>
            	<LineBreak/>
            	<Run Text="If the person is alert, ask if he or she has a lung disease such as COPD or asthma, and check to see if the person's acute inhaler is nearby for the person to self administer."/>
            	<LineBreak/>
            	<Run Text="2. Get the Person to Safety"/>
            	<LineBreak/>
            	<Run Text="Move the person into fresh air if you can do so safely."/>
            	<LineBreak/>
            	<Run Text="Sit or lay the person down, but not on back if the person is vomiting or coughing up sputum."/>
            	<LineBreak/>
            	<Run Text="3. Give CPR"/>
            	<LineBreak/>
            	<Run Text="While waiting for help, if the person is not breathing, give CPR:"/>
            	<LineBreak/>
            	<Run Text="For a child, start CPR for children"/>
            	<LineBreak/>
            	<Run Text="For an adult, start adult CPR."/>
            	<LineBreak/>
            	<Run Text="If the person has pale and clammy skin, glazed eyes, sweating, rapid and shallow breathing, weakness, dizziness, or vomiting:"/>
            	<LineBreak/>
            	<Run Text="Treat for shock. See Shock Treatment."/>
            	<LineBreak/>
            	<Run Text="4. Go to a Hospital Emergency Room"/>
            	<LineBreak/>
            	<Run Text="The person should be examined immediately, even if there are no symptoms."/>
            	<LineBreak/>
            	<Run Text="Damage from toxin inhalation may not show up for hours and can worsen quickly."/>
            	<LineBreak/>
            	<Run Text="5. Follow Up"/>
            	<LineBreak/>
            	<Run Text="At the hospital, the next steps depend on the particular case."/>
            	<LineBreak/>
            	<Run Text="A doctor will examine the person's airways for damage, do tests, and may administer oxygen."/>
            	<LineBreak/>
            	<Run Text="The person may be hospitalized."/>
            	<LineBreak/>
            	<Run Text="An antibiotic, bronchodilator, inhaled cortisone, or other medication may be prescribed."/>
            </TextBlock>
        </ScrollViewer>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

