        		<Run/>
        	</Span>
        	<LineBreak/>
        	<LineBreak/>
        	<Span Foreground="#FF282828" FontWeight="Bold">
        		<Run Text="Breakfast"/>
        	</Span>
        	<Span Foreground="#FF282828">
        		<Run Text=": Muesli with skimmed milk"/>
        	</Span>
        	<Span Foreground="#FF282828" FontWeight="Bold">
        		<Run Text=" "/>
        	</Span>
