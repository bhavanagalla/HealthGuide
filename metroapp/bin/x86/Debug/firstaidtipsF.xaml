<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="metroapp.firstaidtipsF"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:metroapp"
    xmlns:common="using:metroapp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/image2.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="648*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}" Background="Black"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="Firs Aid Tips" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="628" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="1296" Opacity="0.3"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Height="12360" Width="1234" FontFamily="Segoe UI Light" FontSize="24">
            	<Run Foreground="#FF0A0A0A" FontSize="48" Text="Facial Fracture Treatment"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="Call Ambulance if:"/>
            	<LineBreak/>
            	<Run Text="* The person has difficulty breathing."/>
            	<LineBreak/>
            	<Run Text="* The upper and lower jaws don't meet properly."/>
            	<LineBreak/>
            	<Run Text="* There is an open wound with exposed bone."/>
            	<LineBreak/>
            	<Run Text="* The person has blurred or double vision or trouble moving his or her eyeballs."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Get Medical Help Immediately"/>
            	<LineBreak/>
            	<Run Text="You need to see a health care provider for a facial fracture, including broken nose, jaw, cheekbone, or eye socket."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="2. Control Pain and Swelling"/>
            	<LineBreak/>
            	<Run Text="Keep the person's face elevated to allow blood to drain."/>
            	<LineBreak/>
            	<Run Text="Apply ice for swelling."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="3. Follow Up"/>
            	<LineBreak/>
            	<Run Text="The health care provider will examine the person's face and may order X-rays or other tests."/>
            	<LineBreak/>
            	<Run Text="The health care provider may immobilize broken bones to help them heal."/>
            	<LineBreak/>
            	<Run Text="Medications may be prescribed to relieve pain and inflammation and prevent infection."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Foreground="#FF080707" FontSize="48" Text="Fainting Treatment"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="Call ambulance if the person:"/>
            	<LineBreak/>
            	<Run Text="* Has blue lips or face"/>
            	<LineBreak/>
            	<Run Text="* An irregular or slow heartbeat"/>
            	<LineBreak/>
            	<Run Text="* Chest pain"/>
            	<LineBreak/>
            	<Run Text="* Difficulty breathing"/>
            	<LineBreak/>
            	<Run Text="* Is difficult to awaken"/>
            	<LineBreak/>
            	<Run Text="* Acts confused"/>
            	<LineBreak/>
            	<Run Text="1. Make the Person Safe"/>
            	<LineBreak/>
            	<Run Text="Lay the person flat on his or her back."/>
            	<LineBreak/>
            	<Run Text="Elevate the person's legs to restore blood flow to the brain."/>
            	<LineBreak/>
            	<Run Text="Loosen tight clothing."/>
            	<LineBreak/>
            	<Run Text="2. Try to Revive the Person"/>
            	<LineBreak/>
            	<Run Text="Shake the person vigorously, tap briskly, or yell."/>
            	<LineBreak/>
            	<Run Text="If the person doesn't respond, call 911 immediately."/>
            	<LineBreak/>
            	<Run Text="3. Do Home Care for Simple Fainting"/>
            	<LineBreak/>
            	<Run Text="If the person is alert, give fruit juice, especially if the person has not eaten in more than 6 hours or has diabetes."/>
            	<LineBreak/>
            	<Run Text="Stay with the person until he or she is fully recovered."/>
            	<LineBreak/>
            	<Run Text="4. Call a Health Care Provider"/>
            	<LineBreak/>
            	<Run Text="See a health care provider right away if the person:"/>
            	<LineBreak/>
            	<Run Text="Hit his or her head when fainting"/>
            	<LineBreak/>
            	<Run Text="Faints more than once in a month"/>
            	<LineBreak/>
            	<Run Text="Is pregnant or has a heart condition or other serious illness"/>
            	<LineBreak/>
            	<Run Text="Experiences unusual symptoms, such as chest pain, shortness of breath, confusion, blurred vision, or difficulty talking"/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Fever in Adults Treatments"/>
            	<LineBreak/>
            	<Run Text="Call ambulance if the person is:"/>
            	<LineBreak/>
            	<Run Text="* Unresponsive"/>
            	<LineBreak/>
            	<Run Text="* Wheezing or has difficulty breathing"/>
            	<LineBreak/>
            	<Run Text="* Appearing blue in the lips"/>
            	<LineBreak/>
            	<Run Text="* Having convulsions or seizures"/>
            	<LineBreak/>
            	<Run Text="* Speaking in a confused or altered way"/>
            	<LineBreak/>
            	<Run Text="Also seek emergency medical help for any of the following:"/>
            	<LineBreak/>
            	<Run Text="A fever combined with a stiff neck or headache"/>
            	<LineBreak/>
            	<Run Text="Temperature above 105º F"/>
            	<LineBreak/>
            	<Run Text="Sudden onset of rash"/>
            	<LineBreak/>
            	<Run Text="1. Take Temperature"/>
            	<LineBreak/>
            	<Run Text="Temperature can be taken orally, rectally, or under the armpit."/>
            	<LineBreak/>
            	<Run Text="A person is considered feverish if oral temperature is above 100º F (37.8 C) or rectal temperature is above 100.7º F (38.2 C). Temperatures measured under the armpit are not considered as accurate and can be as much as 1º F lower than an oral measurement."/>
            	<LineBreak/>
            	<Run Text="A temperature below 100.4º (38 C) is considered a low-grade or mild fever. It means that the body is responding to an infection."/>
            	<LineBreak/>
            	<Run Text="2. Treat Fever, if Necessary"/>
            	<LineBreak/>
            	<Run Text="No treatment is necessary for a mild fever unless the person is uncomfortable. If the fever is 102º or higher:"/>
            	<LineBreak/>
            	<Run Text="Give an over-the-counter medicine such as acetaminophen (Tylenol) or ibuprofen (Advil, Motrin) as directed on the label. Warning: Do NOT give aspirin to anyone age 18 or younger unless directed to do so by a doctor."/>
            	<LineBreak/>
            	<Run Text="Bathing or sponging in lukewarm water may bring the temperature down. Do not use cold water or alcohol."/>
            	<LineBreak/>
            	<Run Text="Have the person wear light clothing and use a light cover or sheet -- overdressing can make body temperature go up. If the person gets chills, use an extra blanket until they go away."/>
            	<LineBreak/>
            	<Run Text="3. Give Liquids"/>
            	<LineBreak/>
            	<Run Text="Have the person drink plenty of fluids to stay hydrated."/>
            	<LineBreak/>
            	<Run Text="4. When to Contact a Doctor"/>
            	<LineBreak/>
            	<Run Text="Seek medical help immediately if the person has:"/>
            	<LineBreak/>
            	<Run Text="A history of serious illness such as AIDS, heart disease, cancer, or diabetes, or if the person is taking immunosuppressant drugs"/>
            	<LineBreak/>
            	<Run Text="A high fever that doesn't respond to fever-reducing medicine"/>
            	<LineBreak/>
            	<Run Text="Been exposed to extremely hot weather and feels hot but is not sweating"/>
            	<LineBreak/>
            	<Run Text="A stiff neck, is confused, or has trouble staying awake"/>
            	<LineBreak/>
            	<Run Text="Severe pain in the lower abdomen"/>
            	<LineBreak/>
            	<Run Text="Severe stomach pain, vomits repeatedly, or has severe diarrhea"/>
            	<LineBreak/>
            	<Run Text="Skin rashes, blisters, or a red streak on an arm or leg"/>
            	<LineBreak/>
            	<Run Text="A severe sore throat, severe swelling of the throat, or a persistent earache"/>
            	<LineBreak/>
            	<Run Text="Pain with urination, back pain, or shaking chills."/>
            	<LineBreak/>
            	<Run Text="A severe cough, coughs up blood, or has trouble breathing"/>
            	<LineBreak/>
            	<Run Text="5. Follow Up"/>
            	<LineBreak/>
            	<Run Text="Contact a doctor if the high body temperature lasts for more than three days or gets worse."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="Treating Fever in Children"/>
            	<LineBreak/>
            	<Run Text="Call ambulance if the child:"/>
            	<LineBreak/>
            	<Run Text="Is limp or unresponsive"/>
            	<LineBreak/>
            	<Run Text="Is having trouble breathing"/>
            	<LineBreak/>
            	<Run Text="Is vomiting and has a headache or a stiff neck"/>
            	<LineBreak/>
            	<Run Text="Has blue lips or skin"/>
            	<LineBreak/>
            	<Run Text="Has a seizure"/>
            	<LineBreak/>
            	<Run Text="A high temperature can be alarming, but in an otherwise healthy child it usually isn't something serious. A fever often means that a body is working the way it should and fighting off infection."/>
            	<LineBreak/>
            	<Run Text="Call Doctor If:"/>
            	<LineBreak/>
            	<Run Text="You think the child needs medical attention."/>
            	<LineBreak/>
            	<Run Text="The child is younger than 3 months old with a rectal temperature of 100.4 F or higher."/>
            	<LineBreak/>
            	<Run Text="The child is 3 to 6 months old with a temperature of 101 F or higher or has had any fever for more than one day."/>
            	<LineBreak/>
            	<Run Text="The child is older than 6 months and younger than a year with a temperature of 103 F or higher or has had any fever more than one day."/>
            	<LineBreak/>
            	<Run Text="The child is 1 to 2 years old with a high fever lasting more than 24 hours."/>
            	<LineBreak/>
            	<Run Text="The child is any age with a temperature of 104 F or higher."/>
            	<LineBreak/>
            	<Run Text="The soft spot on the child's skull is bulging."/>
            	<LineBreak/>
            	<Run Text="The child vomits repeatedly or has severe diarrhea."/>
            	<LineBreak/>
            	<Run Text="The child has signs of dehydration, such as not wetting diapers, crying without tears, dry mouth or mucous membranes, or sunken soft spot."/>
            	<LineBreak/>
            	<Run Text="The fever triggers a seizure."/>
            	<LineBreak/>
            	<Run Text="The child has a fever and a rash. "/>
            	<LineBreak/>
            	<Run Text="Your child is at special risk for serious infections. This includes children with blood or immune disorders, or any child who has not received the routine immunizations."/>
            	<LineBreak/>
            	<Run Text=" For Infants Younger Than 4 Months Old"/>
            	<LineBreak/>
            	<Run Text="1. Take Temperature"/>
            	<LineBreak/>
            	<Run Text="The most accurate way to take a temperature is rectally. If you are uncomfortable with this, then take temperature under the armpit. If it is higher than 99 F, then double check it rectally using a rectal thermometer to get the most accurate reading."/>
            	<LineBreak/>
            	<Run Text="2. Call Your Pediatrician"/>
            	<LineBreak/>
            	<Run Text="If the child's temperature is higher than 100.4 F, call your pediatrician."/>
            	<LineBreak/>
            	<Run Text="Bathing or sponging the child with lukewarm water may help bring down a fever. Do not use cold water, ice baths, or alcohol."/>
            	<LineBreak/>
            	<Run Text="Do not give any medicine unless discussed first with the doctor,For Children 4 Months Old or Older Who Have Been Immunized"/>
            	<LineBreak/>
            	<Run Text="1. Take Temperature"/>
            	<LineBreak/>
            	<Run Text="Rectal. For a child under 4 or 5 months, use a rectal thermometer to get an accurate reading.  A child has a fever if the rectal temperature is above 100.4 F."/>
            	<LineBreak/>
            	<Run Text="Oral. For a child over 4 or 5 months, you can use an oral or pacifier thermometer. The child has a fever if it registers above 100.4 F."/>
            	<LineBreak/>
            	<Run Text="Ear. If the child is 6 months old or older, you can use an ear or temporal artery thermometer, but this may not be as accurate. Still, under most circumstances, it's a reasonable way to get a good enough estimate. If it's essential that you get an accurate reading, take a rectal temperature."/>
            	<LineBreak/>
            	<Run Text="Armpit. If you take the child's temperature in the armpit, a reading above 100.4 F usually indicates a fever."/>
            	<LineBreak/>
            	<Run Text="2. If Temperature Is Below 102 Degrees F"/>
            	<LineBreak/>
            	<Run Text="You don't need to treat the fever unless the child is uncomfortable."/>
            	<LineBreak/>
            	<Run Text="Make sure the child gets plenty of fluids and rest."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="3. If Temperature Is Above 102 Degrees F but Below 105 Degrees"/>
            	<LineBreak/>
            	<Run Text="You can give child-formula acetaminophen (Tylenol). Ask your pediatrician before giving any fever-reducing medicine to a child for the first time."/>
            	<LineBreak/>
            	<Run Text="Bathing or sponging the child with lukewarm water may help bring down the temperature. Do not use cold water, ice baths, or alcohol."/>
            	<LineBreak/>
            	<Run Text="Do not give aspirin to a child under 18 years of age because of the risk of Reye's syndrome, a dangerous brain disease."/>
            	<LineBreak/>
            	<Run Text="Call your pediatrician to see if you need to bring your child in to see the doctor."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="4. Follow Up"/>
            	<LineBreak/>
            	<Run Text="A child should not return to school or day care until the child is fever free fo at least 24 hours."/>
            	<LineBreak/>
            	<Run Text="Call your pediatrician if the fever lasts for more than two days, gets higher, or you are concerned."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Foreground="#FF131212" FontSize="48" Text="Finger Dislocation Treatment"/>
            	<LineBreak/>
            	<Run Text="Medical Treatment"/>
            	<LineBreak/>
            	<Run Text="Symptoms of a dislocated finger include: pain, swelling, looking bent or deformed, not being able to move the finger."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Control Swelling"/>
            	<LineBreak/>
            	<Run Text="Remove any rings immediately."/>
            	<LineBreak/>
            	<Run Text="Apply ice to the area."/>
            	<LineBreak/>
            	<Run Text="Keep the finger elevated above the heart."/>
            	<LineBreak/>
            	<Run Text="If the finger is bent or deformed, don't try to straighten it. It may be broken."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="2. Get Help"/>
            	<LineBreak/>
            	<Run Text="See a doctor right away. You'll need X-rays and procedures to realign the finger."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="3. Follow Up"/>
            	<LineBreak/>
            	<Run Text="Keep any protective splint or cast clean and dry."/>
            	<LineBreak/>
            	<Run Text="Ice the finger for 20 minutes every few hours for a few days, if you are able."/>
            	<LineBreak/>
            	<Run Text="Continue elevating your finger when possible."/>
            	<LineBreak/>
            	<Run Text="Take pain medication as prescribed by the doctor."/>
            	<LineBreak/>
            	<Run Text="Depending on the nature of the injury, surgery or follow-up with a hand bone specialist may be needed."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Foreground="#FF111010" FontSize="48" Text="Treatment for Finger Injuries"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="Call ambulance if: "/>
            	<LineBreak/>
            	<Run Text="* Blood is spurting from the wound"/>
            	<LineBreak/>
            	<Run Text="* Bleeding cannot be stopped after 5-10 minutes of firm and steady pressure"/>
            	<LineBreak/>
            	<Run Text="Treating Finger Injuries at Home"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Stop Bleeding"/>
            	<LineBreak/>
            	<Run Text="Apply firm pressure until bleeding stops."/>
            	<LineBreak/>
            	<Run Text="If finger or part of finger is severed, put the severed part in a clean plastic bag, pack the bag in ice, and take it with you to the doctor."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="2. Clean Wound"/>
            	<LineBreak/>
            	<Run Text="Wash with fresh water."/>
            	<LineBreak/>
            	<Run Text="Apply antibacterial cream to reduce risk of infection."/>
            	<LineBreak/>
            	<Run Text="Apply a sterile bandage."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="3. Control Swelling"/>
            	<LineBreak/>
            	<Run Text="Apply ice to a bruised or swollen finger."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="4. When to See a Doctor"/>
            	<LineBreak/>
            	<Run Text="Inability to move the finger"/>
            	<LineBreak/>
            	<Run Text="Numbness"/>
            	<LineBreak/>
            	<Run Text="Bone is exposed"/>
            	<LineBreak/>
            	<Run Text="The wound is deep or long."/>
            	<LineBreak/>
            	<Run Text="Pain and swelling are severe or persistent."/>
            	<LineBreak/>
            	<Run Text="You can't clean the wound or the wound is very dirty. (You may need antibiotics)"/>
            	<LineBreak/>
            	<Run Text="The injury is a puncture wound and you haven't had a tetanus shot in the last 10 years."/>
            	<LineBreak/>
            	<Run Text="The injury is from a human or animal bite."/>
            	<LineBreak/>
            	<Run Text="If the wound doesn't heal or shows signs of infection: redness, swelling, pain, or pus."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Foreground="#FF0E0D0D" FontSize="48" Text="Fishhook Injuries"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="Call ambulance if a fishhook is:"/>
            	<LineBreak/>
            	<Run Text="* Embedded in the person's eye or face"/>
            	<LineBreak/>
            	<Run Text="* Deeply embedded in the skin"/>
            	<LineBreak/>
            	<Run Text="For a Fishhook in or Near Eye:"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Protect Eye From Further Injury"/>
            	<LineBreak/>
            	<Run Text="Do not try to remove fishhook or put pressure on eye."/>
            	<LineBreak/>
            	<Run Text="Call for emergency medical help."/>
            	<LineBreak/>
            	<Run Text="Place a paper cup over the eye and tape it in place. Be careful not to put pressure on the fishhook or eye. "/>
            	<LineBreak/>
            	<Run Text="If possible, cover the uninjured eye, too."/>
            	<LineBreak/>
            	<Run Text="For Fishhook Injuries Not on Face:"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Remove Hook"/>
            	<LineBreak/>
            	<Run Text="If only tip -- not the barb -- is in skin, gently pull out hook."/>
            	<LineBreak/>
            	<Run Text="If barb is stuck but you can see it, cut off barb with pliers and pull out ends."/>
            	<LineBreak/>
            	<Run Text="If barb is stuck and you can't see it, push hook through wound until barb emerges, then cut and remove barb and shaft."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="2. Stop Bleeding"/>
            	<LineBreak/>
            	<Run Text="Apply steady pressure with sterile gauze or clean cloth until bleeding stops."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="3. Clean and Protect"/>
            	<LineBreak/>
            	<Run Text="Rinse wound under clean water for several minutes. Then wash area with mild soap and water, and rinse again."/>
            	<LineBreak/>
            	<Run Text="Cover with sterile bandage."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="4. Get Medical Help Immediately"/>
            	<LineBreak/>
            	<Run Text="See a doctor or go to a hospital emergency room."/>
            	<LineBreak/>
            	<Run Text="The person may need a tetanus shot and pain reliever."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Foreground="#FF131212" FontSize="48" Text="Food Poisoning Treatment"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="Call ambulance if: "/>
            	<LineBreak/>
            	<Run Text="* You think the food poisoning may be from seafood or mushrooms"/>
            	<LineBreak/>
            	<Run Text="* If the person is severely dehydrated"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Control Nausea and Vomiting"/>
            	<LineBreak/>
            	<Run Text="Avoid solid foods until vomiting ends. Then eat light, bland foods, such as saltine crackers, bananas, rice, or bread."/>
            	<LineBreak/>
            	<Run Text="Sipping liquids may help avoid vomiting."/>
            	<LineBreak/>
            	<Run Text="Don't eat fried, greasy, spicy, or sweet foods."/>
            	<LineBreak/>
            	<Run Text="Don't take anti-nausea or anti-diarrhea medication without asking your doctor. They may make some kinds of diarrhea worse. Your doctor may give you anti-nausea medication if you are at risk of being dehydrated."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="2. Prevent Dehydration"/>
            	<LineBreak/>
            	<Run Text="Drink clear fluids, starting with small sips and gradually drinking more."/>
            	<LineBreak/>
            	<Run Text="If vomiting and diarrhea last more than 24 hours, drink an oral rehydration solution."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="3. When to Call a Doctor"/>
            	<LineBreak/>
            	<Run Text="Call a doctor immediately if symptoms include:"/>
            	<LineBreak/>
            	<Run Text="Lasting more than 3 days"/>
            	<LineBreak/>
            	<Run Text="Severe belly pain"/>
            	<LineBreak/>
            	<Run Text="Fever"/>
            	<LineBreak/>
            	<Run Text="Bloody diarrhea or dark stools"/>
            	<LineBreak/>
            	<Run Text="Vomiting that is prolonged or bloody"/>
            	<LineBreak/>
            	<Run Text="Signs of dehydration, such as dry mouth, decreased urination, dizziness, fatigue, or increased heart rate or breathing rate"/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Foreground="#FF0F0F0F" FontSize="48" Text="Foreign Body, Eye Treatment"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="Call ambulance if:"/>
            	<LineBreak/>
            	<Run Text="The foreign body in the eye is sharp or is stuck in the eye or is sticking out of the eyelid."/>
            	<LineBreak/>
            	<Run Text="Something hit the eye at a high rate of speed or with force."/>
            	<LineBreak/>
            	<Run Text="The person has pain or a change in vision."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Remove Foreign Body"/>
            	<LineBreak/>
            	<Run Text="Don't try to remove a large object or one that is deeply stuck in the eye. For small particles or something under the upper eyelid:"/>
            	<LineBreak/>
            	<Run Text="Clean around the eye with a wet washcloth if there are many particles."/>
            	<LineBreak/>
            	<Run Text="Rinse the eye with a saline solution or clean water. Or place the affected side of the face in a pan of water; then have the person open and close the eye repeatedly to wash it out."/>
            	<LineBreak/>
            	<Run Text="For something in the corner of the eye or under the lower lid:"/>
            	<LineBreak/>
            	<Run Text="If the object is under the lid, pull down the skin above the cheek bone."/>
            	<LineBreak/>
            	<Run Text="Remove the item with the corner of a damp cloth or moistened cotton swab."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="2. See a Health Care Provider"/>
            	<LineBreak/>
            	<Run Text="Get medical help if the person:"/>
            	<LineBreak/>
            	<Run Text="Still feels like there's something in the eye"/>
            	<LineBreak/>
            	<Run Text="Has abnormal sensation or pain or has changes in vision"/>
            	<LineBreak/>
            	<Run Text="Continues tearing after you wash out the eye"/>
            	<LineBreak/>
            	<Run Text="Has a cloudy spot on the cornea"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="3. Follow Up"/>
            	<LineBreak/>
            	<Run Text="The health care provider will examine the eye."/>
            	<LineBreak/>
            	<Run Text="The person may be referred to an eye specialist."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Foreground="#FF151414" FontSize="48" Text="Fractures or Dislocations Treatment"/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="Call ambulance if:"/>
            	<LineBreak/>
            	<Run Text="* The person is seriously injured."/>
            	<LineBreak/>
            	<Run Text="* You suspect injury to the person's head, neck, or back."/>
            	<LineBreak/>
            	<Run Text="* Bone is sticking out of the skin."/>
            	<LineBreak/>
            	<Run Text="* Bleeding doesn't stop after several minutes of firm pressure."/>
            	<LineBreak/>
            	<Run Text="* Blood spurts from the wound."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="1. Stop Bleeding, if Necessary"/>
            	<LineBreak/>
            	<Run Text="Apply firm pressure to wound with clean cloth until bleeding stops."/>
            	<LineBreak/>
            	<Run Text="If bone is pushing through skin, do not touch it or try to put it back in place."/>
            	<LineBreak/>
            	<Run Foreground="#FF5B0606" FontSize="36" Text="2. Splint the Area, if Possible"/>
            	<LineBreak/>
            	<Run Text="Cut away clothing if it cannot be removed without moving the injured body part."/>
            	<LineBreak/>
            	<Run Text="Gently tape the dislocated area or fracture to a rolled-up newspaper, ruler, or a rolled-up piece of clothing with first aid tape. As much as possible, avoid moving the injured limb, and never force it or try to twist it back into place."/>
            	<LineBreak/>
            	<Run FontSize="36" Text="3. Reduce Swelling and Prevent Injury"/>
            	<LineBreak/>
            	<Run Text="Apply an ice pack wrapped in cloth or a cold compress."/>
            	<LineBreak/>
            	<Run Text="Elevate the injured area if possible."/>
            	<LineBreak/>
            	<Run FontSize="36" Text="4. Manage Pain and Inflammation"/>
            	<LineBreak/>
            	<Run Text="For pain, give ibuprofen (Advil, Motrin), acetaminophen (Tylenol), or naproxen (Aleve, Naprosyn). Do not give aspirin to anyone under age 18."/>
            	<LineBreak/>
            	<Run FontSize="36" Text="5. Get Medical Help As Soon as Possible"/>
            	<LineBreak/>
            	<Run FontSize="36" Text="6. Follow Up"/>
            	<LineBreak/>
            	<Run Text="The doctor will X-ray the dislocation or fracture and may realign and set it."/>
            	<LineBreak/>
            	<Run Text="The doctor may apply a splint or cast, or surgery may be required."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run FontSize="48" Text="Frostbite Treatment"/>
            	<LineBreak/>
            	<Run FontSize="36" Text="Call ambulance if:"/>
            	<LineBreak/>
            	<Run Text="* A part of the person's body or skin is turning white and hard or black."/>
            	<LineBreak/>
            	<Run Text="* The person has lack of feeling in the area."/>
            	<LineBreak/>
            	<Run Text="* The person shows signs of hypothermia."/>
            	<LineBreak/>
            	<Run FontSize="36" Text="1. Seek Medical Care Promptly"/>
            	<LineBreak/>
            	<Run Text="See a doctor or go to a hospital emergency room."/>
            	<LineBreak/>
            	<Run FontSize="36" Text="2. Restore Warmth"/>
            	<LineBreak/>
            	<Run Text="Until you can see a doctor:"/>
            	<LineBreak/>
            	<Run Text="Get the person to a warm place and remove any wet clothing."/>
            	<LineBreak/>
            	<Run Text="Unless absolutely necessary, the person should not walk on frostbitten toes or feet."/>
            	<LineBreak/>
            	<Run Text="Do not rewarm the skin until you can keep it warm. Warming and then re-exposing the frostbitten area to cold air can cause worse damage."/>
            	<LineBreak/>
            	<Run Text="Gently warm the area in warm water (not hot) or with wet heat until the skin appears red and warm."/>
            	<LineBreak/>
            	<Run Text="If no water is nearby, breathe on the area through cupped hands and hold it next to your body."/>
            	<LineBreak/>
            	<Run Text="Do not use direct heat from heating pads, radiator, or fires."/>
            	<LineBreak/>
            	<Run Text="Do not rub or massage the skin or break blisters."/>
            	<LineBreak/>
            	<Run FontSize="36" Text="3. Bandage the Area"/>
            	<LineBreak/>
            	<Run Text="Loosely apply dry, sterile dressings."/>
            	<LineBreak/>
            	<Run Text="Put gauze or clean cotton balls between fingers or toes to keep them separated."/>
            	<LineBreak/>
            	<Run FontSize="36" Text="4. Follow Up"/>
            	<LineBreak/>
            	<Run Text="Once you get medical care, the next steps depend on the particular case."/>
            	<LineBreak/>
            	<Run Text="At the hospital, a doctor will rewarm the area."/>
            	<LineBreak/>
            	<Run Text="The doctor may administer medication for pain or intravenous fluids if the person is dehydrated."/>
            	<LineBreak/>
            	<Run Text="The doctor may also give a tetanus vaccine."/>
            	<LineBreak/>
            	<Run Text="The person may be hospitalized for a few days."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run/>
            </TextBlock>
        </ScrollViewer>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

