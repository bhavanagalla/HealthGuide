        <Image Grid.Column="3" HorizontalAlignment="Left" Height="131" Margin="142,80,0,0" Grid.Row="2" VerticalAlignment="Top" Width="148" Source="Assets/sun.jpg" Stretch="Fill"/>
        <Button x:ConnectionId='2' Content="" Grid.Column="3" HorizontalAlignment="Left" Margin="343,650,0,0" Grid.Row="2" VerticalAlignment="Top"                        BorderThickness="0" Height="72" Width="89">
            <Button.Foreground>
                <ImageBrush ImageSource="Assets/home.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="Assets/home.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>

