<Page
    x:Class="metroapp.First_Aid_Tips"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:metroapp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Foreground="Black">
    <Page.Background>
        <ImageBrush ImageSource="Assets/image2.png" Stretch="Uniform"/>
    </Page.Background>

    <Grid Opacity="0.8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="312*"/>
            <ColumnDefinition Width="320*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="347*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/image2.png"/>
        </Grid.Background>

        <Button x:ConnectionId='1' x:Name="b7" Content="" HorizontalAlignment="Left" Margin="13,27,0,0" VerticalAlignment="Top" Style="{StaticResource PortraitBackButtonStyle}" BorderBrush="Black"                  Grid.RowSpan="3" Grid.Column="1">

        </Button>
        <TextBlock x:Name="Tb9" HorizontalAlignment="Left" Margin="102,4,0,0" TextWrapping="Wrap" Text="First Aid Tips" VerticalAlignment="Top" FontSize="48" FontWeight="Normal" Style="{StaticResource GroupHeaderTextStyle}" Foreground="#FFFFFCFC" Grid.Row="1" Grid.Column="1"/>
        <Rectangle Grid.Column="1" Fill="WhiteSmoke" HorizontalAlignment="Left" Height="610" Margin="10,32,0,0" Grid.Row="2" Stroke="Black" StrokeThickness="0" VerticalAlignment="Top" Width="601" Opacity="0.3"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="20,36,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="586" Width="577" FontSize="22" Style="{StaticResource BodyTextStyle}" TextAlignment="Justify">
        	<Run Foreground="#DE000000" FontWeight="Bold" FontSize="24" Text="Animal Bites Treatment:"/>
        	<LineBreak/>
        	<Run Foreground="#DE000000" FontWeight="Bold" FontSize="24"/>
        	<LineBreak/>
        	<Run Foreground="#DE170303" Text="1. "/>
        	<Run Foreground="#DE250202" Text="Stop Bleeding"/>
        	<LineBreak/>
        	<Run Foreground="#FFF1EBEB" Text="Apply direct pressure until bleeding stops."/>
        	<LineBreak/>
        	<Run Foreground="#DE150303" Text="2. "/>
        	<Run Foreground="#DE1D1B1B" Text="Clean and Protect"/>
        	<LineBreak/>
        	<Run Foreground="#FFFDF5F5" Text="For a wound or superficial scratch from an animal bite:"/>
        	<LineBreak/>
        	<Run Foreground="#FFFDF5F5" Text="Gently clean with soap and warm water. Rinse for several minutes after cleaning."/>
        	<LineBreak/>
        	<Run Foreground="#FFFDF5F5" Text="Apply antibiotic cream to reduce risk of infection, and cover with a sterile bandage."/>
        	<LineBreak/>
        	<Run Foreground="#DE130202" Text="3. Get Help"/>
        	<LineBreak/>
        	<Run Foreground="#FFF5ECEC" Text="Get medical help immediately for any animal bite that is more than a "/>
        	<Run Foreground="#FFF9F3F3" Text="superficial scratch or if the animal was a wild animal or stray, regardless of the severity of the injury."/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F3F3" Text="If the animal's owner is available, find out if the animal's rabies shots are up-to-date. Give this information to your health care provider."/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F3F3" Text="If the animal was a stray or wild animal, call the local health department or animal control immediately."/>
        	<LineBreak/>
        	<Run Foreground="#DE290404" Text="4. Follow Up"/>
        	<LineBreak/>
        	<Run Foreground="#FFF7EFEF" Text="The health care provider will make sure the wound is thoroughly clean and may prescribe antibiotics."/>
        	<LineBreak/>
        	<Run Foreground="#FFF7EFEF" Text="If there is any risk of rabies infection, the health care provider will recommend anti-rabies treatment."/>
        	<LineBreak/>
        	<Run Foreground="#FFF7EFEF" Text="The person may require stitches, "/>
        	<Run Text="depending on the location and severity of the animal bite."/>
        	<LineBreak/>
        	<Run Text="The person may also require a tetanus shot or booster."/>
        	<LineBreak/>
        	<Run Text="The health care provider may recommend ibuprofen or acetaminophen for pain."/>
        </TextBlock>
        <Rectangle Grid.Column="2" Fill="WhiteSmoke" HorizontalAlignment="Left" Height="610" Margin="10,32,0,0" Grid.Row="2" Stroke="Black" StrokeThickness="0" VerticalAlignment="Top" Width="620" Opacity="0.3"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="22,256,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="334" Width="596" FontSize="24" FontWeight="Bold" Style="{StaticResource BodyTextStyle}" TextAlignment="Justify">
        	<Run Foreground="#DE0E0101" FontWeight="Normal" FontSize="22"/>
        	<LineBreak/>
        	<Run Foreground="#DE0E0101" FontWeight="Normal" FontSize="22"/>
        	<LineBreak/>
        	<Run Foreground="#DE0E0101" FontWeight="Normal" FontSize="22"/>
        	<LineBreak/>
        	<Run Foreground="#DE0E0101" FontWeight="Normal" FontSize="22"/>
        	<LineBreak/>
        	<Run Foreground="#DE0E0101" FontWeight="Normal" FontSize="22"/>
        	<LineBreak/>
        	<Run Foreground="#DE0E0101" FontWeight="Normal" FontSize="22"/>
        	<LineBreak/>
        	<Run Foreground="#DE0E0101" FontWeight="Normal" FontSize="22" Text="Key skill:"/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F0F0" FontWeight="Normal" FontSize="22" Text="1. The delivery of chest compressions"/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F0F0" FontWeight="Normal" FontSize="22" Text="2. Check breathing by tilting their head backwards and looking and feeling for breaths."/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F0F0" FontWeight="Normal" FontSize="22" Text="3. Call ambulance as soon as possible, or get someone else to do it."/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F0F0" FontWeight="Normal" FontSize="22" Text="4. Push firmly downwards in the middle of the chest and   then release."/>
        	<LineBreak/>
        	<Run Foreground="#FFF9F0F0" FontWeight="Normal" FontSize="22" Text="5. Push at a regular rate until help arrives."/>
        </TextBlock>
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="219" Margin="172,127,0,0" Grid.Row="2" VerticalAlignment="Top" Width="258" Source="Assets/choking-10.png"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="30,32,0,0" Grid.Row="2" TextWrapping="Wrap" Text="First aid for someone who's unconscious and not breathing:" VerticalAlignment="Top" Height="90" Width="574" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Page>

